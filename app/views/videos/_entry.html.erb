<div id="video_popup" class="modal" tabindex="-1">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3>
      <%= entry.transcription %>
    </h3>
  </div>
  <div class="modal-body">
    <div class="row-fluid">
      <div class="span8">
        <%= video_tag("http://rumble.seemespeak.org/videofiles/Festplatte.webm", :id => "the_video") %>
      </div>
      <div class="span4">
        <ul class="unstyled">
          <li><b>Language:</b> <%= entry.language %></li>
          <li><b>Dialect:</b> <%= entry.dialect %></li>
          <li><b>Copyright:</b> <%= entry.copyright.nil? ? "" : link_to(entry.copyright.author, entry.copyright.links) %></li>
          <li>
            <b>Tags: </b>  <%= entry.tags.map{ |e| content_tag(:span, e, :class => "label") } %>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>