<div class="row-fluid">
  <div class="row-fluid">
    <div class="span8 video">
      <%= render partial: "videos/video", locals: {entry: entry} %>
    </div>
    <div class="span4">
      <ul class="unstyled">
        <li><b>Language:</b> <%= link_to_language(entry.language || "") %></li>
        <li><b>Dialect:</b> <%= entry.dialect %></li>
        <li><b>Copyright:</b> <%= entry.copyright.nil? ? "" : link_to(entry.copyright.author, entry.copyright.link) %></li>
        <li>
          <b>Tags: </b>
          <% entry.tags.each do |e| %>
            <%= link_to_videos_with_tag(e) %>
          <% end %>
        </li>
      </ul>
      <%= link_to "mark as moderated", mark_as_moderated_review_path(entry), :class => "btn btn-success" %>
      <%= link_to "edit entry", edit_review_path(entry), :class => "btn btn-success" %>
      <%= link_to "delete entry", review_path(entry), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
    </div>
  </div>
</div>
